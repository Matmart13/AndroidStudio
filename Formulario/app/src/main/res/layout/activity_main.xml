<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Textview"
        android:layout_width="94dp"
        android:layout_height="44dp"
        android:text="Nombre:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="94dp"
        android:layout_height="44dp"
        android:text="Nota:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.203" />

    <TextView
        android:id="@+id/Textview1"
        android:layout_width="101dp"
        android:layout_height="43dp"
        android:text="Apellido:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.117" />

    <EditText
        android:id="@+id/miEditText"
        android:layout_width="264dp"
        android:layout_height="60dp"
        android:layout_marginStart="140dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#E91E63"
        android:textColor="@color/black"
        android:textColorHighlight="#000000"
        android:textColorHint="#000000"
        android:textColorLink="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/miEditText1"
        android:layout_width="264dp"
        android:layout_height="65dp"
        android:layout_marginStart="144dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="#E91E63"
        android:foregroundTint="#E91E63"
        android:textColor="@color/black"
        android:textColorHighlight="#090909"
        android:textColorLink="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Nombre"
        android:layout_width="414dp"
        android:layout_height="35dp"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.465" />

    <ImageButton
        android:id="@+id/miImageButtom"
        android:layout_width="83dp"
        android:layout_height="75dp"
        android:layout_marginStart="312dp"
        android:layout_marginTop="204dp"
        android:onClick="clickEnImagenBoton1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <Spinner
        android:id="@+id/miSpinner"
        android:layout_width="247dp"
        android:layout_height="49dp"
        android:layout_marginLeft="164dp"
        android:layout_marginBottom="164dp"
        android:background="#33fffc"
        app:layout_constraintBottom_toBottomOf="@+id/miImageButtom"
        app:layout_constraintLeft_toLeftOf="@+id/Nombre"
        tools:ignore="MissingConstraints" />

    <CheckBox
        android:id="@+id/miCheckbox"
        android:layout_width="111dp"
        android:layout_height="141dp"
        android:layout_marginLeft="308dp"
        android:layout_marginTop="24dp"
        android:onClick="clickEnCheckBox"
        android:text="Checkbox"
        app:layout_constraintLeft_toLeftOf="@+id/Nombre"
        app:layout_constraintTop_toBottomOf="@+id/Nombre" />

    <Switch
        android:id="@+id/miSwitch"
        android:layout_width="138dp"
        android:layout_height="104dp"
        android:layout_marginLeft="156dp"
        android:layout_marginTop="28dp"
        android:text="Reiniciar"
        app:layout_constraintLeft_toLeftOf="@+id/Nombre"
        app:layout_constraintTop_toBottomOf="@+id/Nombre" />

    <SeekBar
        android:id="@+id/miSeekbar"
        android:layout_width="404dp"
        android:layout_height="58dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="164dp"
        app:layout_constraintLeft_toLeftOf="@+id/Nombre"
        app:layout_constraintTop_toBottomOf="@+id/Nombre" />

    <TextView
        android:id="@+id/miTexto"
        android:layout_width="147dp"
        android:layout_height="72dp"
        android:text="Texto:"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.602" />

    <RatingBar
        android:id="@+id/miRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="152dp"
        android:numStars="5"
        app:layout_constraintLeft_toLeftOf="@+id/miSpinner"
        app:layout_constraintTop_toBottomOf="@+id/miSpinner" />
</androidx.constraintlayout.widget.ConstraintLayout>